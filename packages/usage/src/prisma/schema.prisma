datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

generator prismaIDB {
  provider = "prisma-idb-generator"
  output   = "../lib/prisma-idb"
}

model User {
  id    String @id @default(cuid())
  name  String
  todos Todo[]
}

model Todo {
  id             String  @id @default(cuid())
  task           String
  isCompleted    Boolean
  timeToComplete Int
  user           User    @relation(fields: [userId], references: [id])
  userId         String
}
